@using VillageBuildingReservation.Models.ViewModels
@model List<UserRoleViewModel>
@{
    ViewData["Title"] = "EditUserInRole";
    var RoleId = ViewBag.RoleId;
    var RoleName = ViewBag.RoleName;

}
<form method="post">
    <div class="col-md-4 card m-3">
        <h1 style="color:red">Role :  "@RoleName"</h1>
        <div class="card-header">
            <h2>Add Or Remove Users For This Role</h2>
        </div>

        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
                @Html.HiddenFor(model => Model[i].UserId)
                @Html.HiddenFor(model => Model[i].UserName)

                <div class="form-check m-1">
                    @Html.CheckBoxFor(model => Model[i].IsSelected, new { htmlAttributes = new { @class = "form-check-input" } })
                    <label class="form-check-label">
                        @Model[i].UserName
                    </label>
                </div>
            }
        </div>
        <div class="card-footer">
            <input type="submit" asp-route-RoleId="@RoleId" class="btn btn-danger" value="Update">
        </div>
    </div>

</form>